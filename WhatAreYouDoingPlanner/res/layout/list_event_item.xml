<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <ImageView
        android:id="@+id/myIcon"
        android:layout_width="150px"
        android:layout_height="150px"       
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:padding="4px"
        android:src="@drawable/sticker"/> 
    
    <TextView
        android:id="@+id/event_list_item_titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_toRightOf="@id/myIcon"
        android:text="Event title"/>
   
    <TextView
        android:id="@+id/event_list_item_timeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       	android:layout_below="@id/event_list_item_titleTextView"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_toRightOf="@id/myIcon"
        android:paddingTop="4dp"
        android:textSize="20sp"
        android:text="9:00"/>
    

</RelativeLayout>
